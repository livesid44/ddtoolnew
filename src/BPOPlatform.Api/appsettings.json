{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Jwt": {
    "Secret": "__JWT_SECRET_MIN_32_CHARS__ (generate with: openssl rand -base64 32)",
    "Issuer": "BPOPlatform",
    "Audience": "BPOPlatformClients",
    "ExpiryMinutes": 60
  },

  "Ldap": {
    "Host": "__LDAP_HOST__ (e.g. ldap.company.com)",
    "Port": 389,
    "BaseDn": "__LDAP_BASE_DN__ (e.g. DC=company,DC=com)",
    "UseSsl": false,
    "TimeoutSeconds": 10
  },

  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "__YOUR_TENANT_DOMAIN__ (e.g. contoso.onmicrosoft.com â€“ Azure portal > Entra ID > Overview)",
    "TenantId": "__YOUR_TENANT_ID__ (Azure portal > Entra ID > Overview > Tenant ID)",
    "ClientId": "__YOUR_CLIENT_ID__ (Azure portal > Entra ID > App registrations > your app > Application ID)",
    "Scopes": "BPOPlatform.Read BPOPlatform.Write"
  },

  "ConnectionStrings": {
    "DefaultConnection": "__AZURE_SQL_CONNECTION_STRING__",
    "BlobStorage": ""
  },

  "AzureStorage": {
    "ServiceUri": "__AZURE_STORAGE_ACCOUNT_URI__",
    "ArtifactsContainerName": "process-artifacts"
  },

  "AzureOpenAI": {
    "Endpoint": "__AZURE_OPENAI_ENDPOINT__",
    "DeploymentName": "gpt-4o"
  },

  "ApplicationInsights": {
    "ConnectionString": "__APPLICATIONINSIGHTS_CONNECTION_STRING__"
  },

  "DocumentIntelligence": {
    "Endpoint": "__AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT__ (Azure portal > AI services > Document Intelligence > Keys and Endpoint)"
  },

  "SpeechServices": {
    "Endpoint": "__AZURE_SPEECH_SERVICES_ENDPOINT__",
    "Region": "__AZURE_SPEECH_REGION__ (e.g. eastus)",
    "SubscriptionKey": "__AZURE_SPEECH_SUBSCRIPTION_KEY__ (stored in Key Vault in production)"
  },

  "PowerAutomate": {
    "FlowUrl": "__POWER_AUTOMATE_HTTP_TRIGGER_URL__ (Power Automate > Your flow > Trigger > HTTP POST URL)"
  },

  "AllowedOrigins": [
    "https://your-frontend.azurestaticapps.net"
  ],

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}
